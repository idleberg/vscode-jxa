{
	"name": "jxa",
	"displayName": "JXA",
	"description": "Language syntax, snippets and build system for JavaScript for Automation (JXA)",
	"version": "0.2.2",
	"publisher": "idleberg",
	"license": "MIT",
	"author": {
		"name": "Jan T. Sott",
		"url": "http://github.com/idleberg"
	},
	"scripts": {
		"compile": "npm run build",
		"build": "concurrently --prefix-colors 'blue,green' 'npm:build:*'",
		"build:code": "tsdown",
		"build:image": "sharp resize 1024 1024 --input src/logo.svg --output resources/logo.png",
		"dev": "npm run start",
		"lint": "biome check",
		"publish:ovsx": "ovsx publish --no-dependencies",
		"publish:vsce": "vsce publish --githubBranch main --no-dependencies",
		"start": "npm run build:code -- --watch",
		"test": "echo \"no tests yet\" && exit 0",
		"vscode:prepublish": "npm run build"
	},
	"keywords": [
		"apple",
		"jxa",
		"javascript for automation",
		"macos"
	],
	"repository": {
		"type": "git",
		"url": "https://github.com/idleberg/vscode-jxa.git"
	},
	"homepage": "https://github.com/idleberg/vscode-jxa",
	"bugs": {
		"url": "https://github.com/idleberg/vscode-jxa/issues"
	},
	"main": "./lib/index.cjs",
	"icon": "resources/logo.png",
	"engines": {
		"vscode": "^1.85.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onLanguage:javascript"
	],
	"contributes": {
		"configuration": {
			"type": "object",
			"title": "JXA",
			"properties": {
				"jxa.showNotifications": {
					"type": "boolean",
					"default": true,
					"description": "Show build notifications indicating success or failure",
					"order": 1
				},
				"jxa.alwaysShowOutput": {
					"type": "boolean",
					"default": false,
					"description": "Specify whether to show the output panel on errors only or on each build",
					"order": 2
				},
				"jxa.convertErrorRange": {
					"type": "boolean",
					"default": false,
					"description": "Convert error range to line/column",
					"order": 3
				},
				"jxa.alwaysOpenBuildTask": {
					"type": "boolean",
					"default": true,
					"description": "Specify whether to open the newly created build task",
					"order": 4
				},
				"jxa.defaultBuildTask": {
					"type": "string",
					"enum": [
						"script",
						"bundle",
						"app"
					],
					"default": "script",
					"description": "Specify the default build task when creating a new task file",
					"order": 5
				},
				"jxa.ignoreOS": {
					"type": "boolean",
					"default": false,
					"description": "For debugging purposes, you can disable the OS eligibility test",
					"order": 6
				},
				"jxa.osacompile.executeOnly": {
					"type": "boolean",
					"default": false,
					"description": "Save the resulting script as execute-only",
					"order": 8
				},
				"jxa.osacompile.stayOpen": {
					"type": "boolean",
					"default": false,
					"description": "Stay open after run handler",
					"order": 9
				},
				"jxa.osacompile.startupScreen": {
					"type": "boolean",
					"default": false,
					"description": "Show startup-screen",
					"order": 10
				},
				"jxa.osascript.outputStyle": {
					"type": "string",
					"default": "",
					"markdownDescription": "%osascriptOutputStyle%",
					"order": 11
				},
				"jxa.allowMultiTermination": {
					"type": "boolean",
					"default": false,
					"description": "Allows the selection of multiple processes to be terminated",
					"order": 15
				}
			}
		},
		"commands": [
			{
				"command": "extension.jxa.run",
				"title": "JXA: Run Script",
				"icon": "$(play)"
			},
			{
				"command": "extension.jxa.compile",
				"title": "JXA: Compile Script",
				"icon": "$(save)"
			},
			{
				"command": "extension.jxa.compileBundle",
				"title": "JXA: Compile Script bundle",
				"icon": "$(layers)"
			},
			{
				"command": "extension.jxa.compileApp",
				"title": "JXA: Compile Application",
				"icon": "$(package)"
			},
			{
				"command": "extension.jxa.openSettings",
				"title": "JXA: Open Settings",
				"icon": "$(settings)"
			},
			{
				"command": "extension.jxa.terminateProcess",
				"title": "JXA: Terminate Process",
				"icon": "$(close)"
			}
		],
		"menus": {
			"editor/title": [
				{
					"when": "resourceLangId == javascript",
					"command": "extension.jxa.run",
					"group": "navigation@1"
				},
				{
					"when": "resourceLangId == javascript",
					"command": "extension.jxa.compile",
					"group": "navigation@2"
				},
				{
					"when": "resourceLangId == javascript",
					"command": "extension.jxa.compileBundle",
					"group": "navigation@3"
				},
				{
					"when": "resourceLangId == javascript",
					"command": "extension.jxa.compileApp",
					"group": "navigation@4"
				},
				{
					"when": "resourceLangId == javascript",
					"command": "extension.jxa.terminateProcess",
					"group": "navigation@5"
				},
				{
					"when": "resourceLangId == javascript",
					"command": "extension.jxa.openSettings",
					"group": "navigation@6"
				}
			]
		},
		"contributes": {
			"typings": "./node_modules/@jxa/global-type/types/index.d.ts"
		}
	},
	"dependencies": {
		"@jxa/global-type": "^1.4.0",
		"line-column": "^1.0.2",
		"vscode-get-config": "^0.6.2"
	},
	"devDependencies": {
		"@commitlint/cli": "^20.4.1",
		"@commitlint/config-conventional": "^20.4.1",
		"@idleberg/configs": "^0.4.2",
		"@types/line-column": "^1.0.2",
		"@types/node": "^24.7.0",
		"@types/vscode": "1.85.0",
		"concurrently": "^9.2.1",
		"cross-env": "^10.1.0",
		"sharp-cli": "^5.2.0",
		"tsdown": "^0.20.3",
		"typescript": "^5.9.3"
	},
	"pnpm": {
		"onlyBuiltDependencies": [
			"lefthook"
		]
	},
	"packageManager": "pnpm@10.27.0+sha512.72d699da16b1179c14ba9e64dc71c9a40988cbdc65c264cb0e489db7de917f20dcf4d64d8723625f2969ba52d4b7e2a1170682d9ac2a5dcaeaab732b7e16f04a"
}
